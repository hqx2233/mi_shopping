.component_container{
   display: flex;
  flex-direction: column;
   
  background: gainsboro;
  width: 100%;
  
}

 .top_image{
  width: 100%;
  height: 400rpx;
  background: white;
}

.top_image image{
  width: inherit;
  height: inherit;
}
 .big{
   display: flex;
   flex-direction: row;
   flex-wrap: wrap;
   width: 100%;
   background: white;
   justify-content: space-between;
 }
 .min_component{
  display: flex;
  flex-direction: column; 
  align-items: flex-start;  
  width:49.5%;
  height: 400rpx;
  margin-top: 5rpx;
}     

.min_component image{
  width: 100%;
  height: 240rpx;
 
}

.min_component text{
  padding-left: 20rpx;
}  

 .title{
  font-size: 34rpx;
  padding-top: 20rpx;
}

.contents{
     font-size: 25rpx;     
   color:#999; 
   padding-top: 10rpx; 
}

.price{
  font-size: 30rpx;
